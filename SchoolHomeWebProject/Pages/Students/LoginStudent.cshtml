@page
@using Project.ModelsSchool;
@model SchoolHomeWebProject.Pages.Students.LoginStudentModel
@{
    ViewData["Title"] = "Login Student";
}

<link rel="stylesheet" href="~/css/studentLoginStyle.css">

<div class="container-login">
    <h2>Student Login</h2>

    <form method="post" asp-page-handler="Login">
        <div class="form-group">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Loginn</button>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["ErrorMessageNullOrEmpty"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["ErrorMessageNullOrEmpty"]
            </div>
        }

    </form>
</div>
