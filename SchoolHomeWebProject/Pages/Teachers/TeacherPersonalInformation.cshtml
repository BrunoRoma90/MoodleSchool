@page
@using Project.ModelsSchool;
@model SchoolHomeWebProject.Pages.Teachers.TeacherPersonalInformationModel
@{
    ViewData["Title"] = "Personal Information";
}

<link rel="stylesheet" href="~/css/myInformationsStyle.css">

<h1>My Informations</h1>


<table>
    <tr>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Birthdate</th>
        <th>Email</th>
        <th>PhoneNumber</th>
        <th>Username</th>
        <th>Address</th>
    </tr>

    <tr>
        <td>@Model.Teacher.FirstName</td>
        <td>@Model.Teacher.LastName</td>
        <td>@Model.Teacher.BirthDate.ToString("d")</td>
        <td>@Model.Teacher.Email</td>
        <td>@Model.Teacher.PhoneNumber</td>
        <td>@Model.Teacher.UserName</td>
        <td>@Model.Teacher.Address.Street @Model.Teacher.Address.Number @Model.Teacher.Address.Locale @Model.Teacher.Address.PostalCode</td>
    </tr>
</table>
<table>
    <tr>
        <th>SubjectName</th>
        <th>SubjectDescription</th>

    </tr>
    @if (Model.Subjects != null)
    {
        foreach (Subject subject in Model.Subjects)
        {
            <tr>
                <td>@subject.SubjectName</td>
                <td>@subject.SubjectDescription</td>

            </tr>
        }

    }
</table>
